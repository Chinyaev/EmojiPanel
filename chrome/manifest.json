{
  "manifest_version": 2,

  "name": "EmojiPanel for Twitter",
  "short_name": "EmojiPanel",
  "description": "Emoji dropdown panel for twitter.com",
  "author": "Dan Bovey",
  "version": "1.1.0",
  "minimum_chrome_version": "36",

  "permissions": [
    "storage",
    "*://*.twitter.com/*"
  ],

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "content_scripts": [ {
    "css": [ "css/style.css" ],
    "js": ["js/content.js" ],
    "matches": [ "http://*.twitter.com/*", "https://*.twitter.com/*"]
  }],

  "web_accessible_resources": [
    "emojis.json",
    "img/emojis.svg"
  ],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
